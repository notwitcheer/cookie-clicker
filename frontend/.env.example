# Frontend Environment Configuration

# ============================================
# Application Configuration
# ============================================

# Application name
VITE_APP_NAME=MegaETH Cookie Clicker

# Application URL (for production)
VITE_APP_URL=https://your-domain.com

# Environment (development, staging, production)
VITE_APP_ENV=development

# ============================================
# Blockchain Configuration
# ============================================

# MegaETH Testnet RPC URL
VITE_MEGAETH_RPC_URL=https://timothy.megaeth.com/rpc

# Smart contract address (set after deployment)
VITE_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# ============================================
# WalletConnect Configuration
# ============================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here

# ============================================
# API Configuration
# ============================================

# Block Explorer API URL
VITE_EXPLORER_URL=https://megaexplorer.xyz

# Backend API URL (if you add one later)
VITE_API_URL=https://api.your-domain.com

# ============================================
# Feature Flags
# ============================================

# Enable development tools
VITE_DEV_TOOLS=true

# Enable analytics
VITE_ANALYTICS_ENABLED=false

# Enable sound effects
VITE_SOUND_ENABLED=true

# ============================================
# Performance Configuration
# ============================================

# Score polling interval (milliseconds)
VITE_SCORE_POLL_INTERVAL=1000

# Leaderboard polling interval (milliseconds)
VITE_LEADERBOARD_POLL_INTERVAL=5000

# Transaction timeout (milliseconds)
VITE_TX_TIMEOUT=60000